<html>
  <head>
    <title>Homepage</title>
    <link rel="stylesheet" href="./styles.css" />
  </head>
  <body>
    <h1>Homepage</h1>
    <a href="/new">
      <span>Write New</span>
    </a>
    <ul>
      <%if (locals.messages) {%> <% messages.forEach((message, index) => { %>
      <li>
        <p><%= message.message %></p>
        <p><%= message.author %></p>
        <p><%= message.timestamp %></p>
        <p><%= index %></p>

      </li>
      <% });%> <% }%>
    </ul>
    <%- include('footer') %>
  </body>
</html>
